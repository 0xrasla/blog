---
import { SITE_TITLE } from "../consts";
---

<header
  class="fixed w-full bg-white/80 backdrop-blur-sm border-b border-gray-200 z-50"
>
  <nav class="max-w-4xl mx-auto px-4 h-16 flex items-center justify-between">
    <h2 class="text-lg font-bold">
      <a href="/" class="text-gray-900 hover:text-gray-600 transition-colors"
        >{SITE_TITLE}</a
      >
    </h2>

    <div class="flex items-center gap-8">
      <div class="internal-links flex items-center gap-6">
        <a href="/" class="nav-link relative">Home</a>
        <a href="/blog" class="nav-link relative">Blog</a>
        <a href="/about" class="nav-link relative">About</a>
      </div>

      <div class="social-links flex items-center gap-3">
        <a
          href="https://github.com/withastro/astro"
          target="_blank"
          class="text-gray-500 hover:text-gray-900 transition-colors"
          aria-label="GitHub"
        >
          <svg
            viewBox="0 0 16 16"
            aria-hidden="true"
            width="20"
            height="20"
            class="fill-current"
          >
            <path
              d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
            ></path>
          </svg>
        </a>
      </div>
    </div>
  </nav>
</header>

<style>
  .nav-link {
    @apply text-gray-500 hover:text-gray-900 transition-colors py-1;
  }

  .nav-link::after {
    @apply content-[''] absolute left-0 bottom-0 w-0 h-0.5 bg-gray-900 transition-all duration-300;
  }

  .nav-link:hover::after,
  .nav-link[aria-current="page"]::after {
    @apply w-full;
  }
</style>

<script>
  // Add aria-current="page" to the active link
  const path = window.location.pathname;
  const links = document.querySelectorAll(".nav-link");

  links.forEach((link) => {
    const href = link.getAttribute("href");
    if (href === path || (href === "/blog" && path.startsWith("/blog/"))) {
      link.setAttribute("aria-current", "page");
    }
  });
</script>
