---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../consts";
---

<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body class="bg-white">
    <Header />
    <main class="max-w-4xl mx-auto px-4 py-16 pt-28">
      <div class="text-center mb-16">
        <h1 class="text-4xl md:text-6xl font-bold text-gray-900 mb-6">
          Hi, I'm Thinesh Rasla 👋
        </h1>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          A passionate developer who loves Linux, coding, and exploring new
          technologies.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-16">
        <div class="p-6 rounded-lg bg-gray-50 border border-gray-200">
          <h2 class="text-2xl font-bold text-gray-900 mb-4">
            About Me
          </h2>
          <p class="text-gray-600">
            I'm a tech enthusiast who's deeply passionate about the world of
            computing. My journey in technology is driven by curiosity and a
            constant desire to learn and grow in this ever-evolving field.
          </p>
        </div>

        <div class="p-6 rounded-lg bg-gray-50 border border-gray-200">
          <h2 class="text-2xl font-bold text-gray-900 mb-4">
            What I Love
          </h2>
          <ul class="space-y-2 text-gray-600">
            <li class="flex items-center">
              <span class="mr-2">🐧</span> Linux and Open Source
            </li>
            <li class="flex items-center">
              <span class="mr-2">💻</span> Coding and Problem Solving
            </li>
            <li class="flex items-center">
              <span class="mr-2">🔍</span> Exploring New Technologies
            </li>
            <li class="flex items-center">
              <span class="mr-2">🌱</span> Continuous Learning
            </li>
          </ul>
        </div>
      </div>

      <div class="text-center">
        <a
          href="/blog"
          class="inline-block bg-gray-900 hover:bg-gray-800 text-white font-semibold px-6 py-3 rounded-lg transition-colors"
        >
          Read My Blog
        </a>
      </div>
    </main>
    <Footer />
  </body>
</html>
