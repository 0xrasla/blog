---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../consts";
---

<html lang="en">
  <head>
    <BaseHead title={`About - ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
  </head>
  <body class="bg-white dark:bg-gray-900">
    <Header />
    <main class="max-w-4xl mx-auto px-4 py-16 pt-28">
      <!-- Story Section -->
      <section class="mb-16">
        <h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-8">
          My Story
        </h1>
        <div class="prose prose-lg dark:prose-invert">
          <p class="text-gray-600 dark:text-gray-300 mb-4">
            Hey there! I'm Thinesh Rasla, a passionate developer and open-source
            enthusiast. My journey in tech started with a curiosity about how
            computers work, which led me down the fascinating path of Linux and
            programming.
          </p>
          <p class="text-gray-600 dark:text-gray-300 mb-4">
            I believe in the power of open-source software and the community
            that builds it. Through my projects and contributions, I aim to make
            technology more accessible and enjoyable for everyone.
          </p>
          <p class="text-gray-600 dark:text-gray-300">
            When I'm not coding, you'll find me exploring new technologies,
            contributing to open-source projects, or sharing my knowledge
            through blog posts and discussions.
          </p>
        </div>
      </section>

      <!-- Skills Section -->
      <section class="mb-16">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">
          Skills & Technologies
        </h2>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
          {
            [
              "Linux",
              "Git",
              "JavaScript",
              "TypeScript",
              "React",
              "Node.js",
              "Python",
              "Docker",
            ].map((skill) => (
              <div class="bg-gray-900 hover:bg-gray-800 cursor-pointer text-white text-center font-semibold px-6 py-3 rounded-lg transition-colors">
                <span class="text-gray-50 dark:text-gray-300">{skill}</span>
              </div>
            ))
          }
        </div>
      </section>

      <section>
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">
          Open Source Projects
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div
            class="group relative rounded-lg border border-gray-200 dark:border-gray-800 bg-white dark:bg-gray-800 p-6 shadow-sm transition-shadow hover:shadow-md"
          >
            <div class="flex flex-col h-full">
              <div class="mb-4">
                <h3 class="text-xl font-semibold text-gray-900 dark:text-white">
                  Project Name 1
                </h3>
                <p class="text-sm text-gray-500 dark:text-gray-400">
                  TypeScript • React
                </p>
              </div>
              <p class="text-gray-600 dark:text-gray-300 mb-4 flex-grow">
                A brief description of your first project. What it does and why
                it's useful.
              </p>
              <div class="flex items-center gap-4">
                <a
                  href="#"
                  class="text-sm text-blue-600 dark:text-blue-400 hover:underline"
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  View Project →
                </a>
                <a
                  href="#"
                  class="text-sm text-gray-600 dark:text-gray-400 hover:underline"
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  GitHub →
                </a>
              </div>
            </div>
          </div>

          <!-- Project Card 2 -->
          <div
            class="group relative rounded-lg border border-gray-200 dark:border-gray-800 bg-white dark:bg-gray-800 p-6 shadow-sm transition-shadow hover:shadow-md"
          >
            <div class="flex flex-col h-full">
              <div class="mb-4">
                <h3 class="text-xl font-semibold text-gray-900 dark:text-white">
                  Project Name 2
                </h3>
                <p class="text-sm text-gray-500 dark:text-gray-400">
                  Python • Docker
                </p>
              </div>
              <p class="text-gray-600 dark:text-gray-300 mb-4 flex-grow">
                A brief description of your second project. What it does and why
                it's useful.
              </p>
              <div class="flex items-center gap-4">
                <a
                  href="#"
                  class="text-sm text-blue-600 dark:text-blue-400 hover:underline"
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  View Project →
                </a>
                <a
                  href="#"
                  class="text-sm text-gray-600 dark:text-gray-400 hover:underline"
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  GitHub →
                </a>
              </div>
            </div>
          </div>
        </div>
      </section>
    </main>
    <Footer />
  </body>
</html>
